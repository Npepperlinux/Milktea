<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:background="?attr/colorSurface"
            >
        <LinearLayout
                android:id="@+id/unRenoteBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

            <ImageButton
                    android:id="@+id/unRenoteIcon"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_delete_black_24dp"
                    tools:ignore="ContentDescription"
                    app:tint="?attr/normalIconTint" />

            <Button
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/unrenote"
                    android:textSize="20sp"
                    android:id="@+id/unRenote"

                    />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/renoteBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

            <ImageButton
                    android:id="@+id/imageButton5"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_re_note"
                    tools:ignore="ContentDescription"
                    app:tint="?attr/normalIconTint" />

            <Button
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/renote"
                    android:textSize="20sp"
                    android:id="@+id/renote"

                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/quoteRenoteBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

            <ImageButton
                    android:id="@+id/imageButton6"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_format_quote_black_24dp"
                    tools:ignore="ContentDescription"
                    app:tint="?attr/normalIconTint" />

            <Button
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quote_renote"
                    android:textSize="20sp"
                    android:id="@+id/quote_renote"


                    />
        </LinearLayout>
    </LinearLayout>
</layout>
